@{
    Layout = null;
}

@model LoginModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Little Corner Bookstore Admin Login</title>
    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Chivo:wght@300&family=Crimson+Pro&display=swap" rel="stylesheet">
</head>

<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand m-lg-2" style="font-family:Chivo">Little Corner Bookstore</span>
    </div>

    <div class="m-1 p-1">
        <div class="text-danger" asp-validation-summary="All" style="font-family:Chivo"></div>

        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="form-group" style="font-family:Chivo">
                <label asp-for="Username">Username:</label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group" style="font-family:Chivo">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" class="form-control" type="password" />
            </div>

            <button class="btn btn-primary" type="submit" style="font-family:Chivo">Log In</button>

            <input type="hidden" asp-for="ReturnUrl" />
        </form>
    </div>
</body>
</html>
